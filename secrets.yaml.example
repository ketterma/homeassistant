# This is an example secrets.yaml file for Home Assistant config validation
# Copy this to secrets.yaml and fill in your actual values
# DO NOT commit the actual secrets.yaml file to version control

# Example secrets that might be needed for config validation
# These are placeholders - replace with your actual values or remove if not needed

# Network configuration
trusted_network: "192.168.1.0/24"

# API keys and tokens
weather_api_key: "your_weather_api_key_here"
spotify_client_id: "your_spotify_client_id"
spotify_client_secret: "your_spotify_client_secret"

# Device credentials
device_username: "your_device_username"
device_password: "your_device_password"

# URLs and endpoints
base_url: "https://your-home-assistant-instance.com"